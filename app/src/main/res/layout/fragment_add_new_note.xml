<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.add_new_note.AddNewNoteFragment">

    <EditText
        android:id="@+id/inputNameNote"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@null"
        android:hint="@string/hint_title_note"
        tools:ignore="LabelFor"
        style="@style/editText" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/inputTextNote"
        app:layout_constraintTop_toBottomOf="@id/inputNameNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"
        android:background="@null"
        android:hint="@string/hint_text_note"
        tools:ignore="LabelFor"
        style="@style/editText" />

</androidx.constraintlayout.widget.ConstraintLayout>